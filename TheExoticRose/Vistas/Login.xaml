<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheExoticRose.Vistas.Login"
             BackgroundColor="#D9D9D9"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="Logo.png" Grid.Row="0" WidthRequest="350"/>
            <StackLayout Grid.Row="1" Padding="10,20">
                <Entry Placeholder="Usuario" PlaceholderColor="Gray" TextColor="Black" x:Name="txtUsuario"/>
                <Entry Placeholder="Contraseña" PlaceholderColor="Gray" TextColor="Black" IsPassword="True" x:Name="txtContrasena"/>
                <Button x:Name="btIniciar" Text="Iniciar sesión" BackgroundColor="#005398" TextColor="White" BorderRadius="40" Margin="0,10,0,0" Clicked="btIniciar_Clicked"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="¿recuperar contraseña?" TextColor="#005398"/>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>